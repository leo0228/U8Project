<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70000000"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebecee"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/keyboard_invisable"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:background="@null"
            android:src="@drawable/payeco_plugin_bomarr"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c1c1c1"/>

        <LinearLayout
            android:id="@+id/payeco_keyboard_editText_hx"
            android:layout_width="match_parent"
            android:layout_height="38.0dp"
            android:layout_margin="5dip"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/payeco_keyboard_password_hx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/payeco_plugin_editbg"
                android:cursorVisible="false"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#687887"
                android:textCursorDrawable="@drawable/payeco_cursor"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/payeco_digit_ok_hx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_weight="2"
                android:background="@drawable/payeco_stand_btnselector"
                android:text="@string/payeco_tip_sure"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c1c1c1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dip"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/payeco_digit_1_hx"
                    style="@style/payeco_keyboardDigitButton_hx"
                    android:layout_weight="1"
                    android:text="1"/>

                <Button
                    android:id="@+id/payeco_digit_2_hx"
                    style="@style/payeco_keyboardDigitButton_hx"
                    android:layout_weight="1"
                    android:text="2"/>

                <Button
                    android:id="@+id/payeco_digit_3_hx"
                    style="@style/payeco_keyboardDigitButton_hx"
                    android:layout_weight="1"
                    android:text="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/payeco_digit_4_hx"
                    style="@style/payeco_keyboardDigitButton_hx"
                    android:layout_weight="1"
                    android:text="4"/>

                <Button
                    android:id="@+id/payeco_digit_5_hx"
                    style="@style/payeco_keyboardDigitButton_hx"
                    android:layout_weight="1"
                    android:text="5"/>

                <Button
                    android:id="@+id/payeco_digit_6_hx"
                    style="@style/payeco_keyboardDigitButton_hx"
                    android:layout_weight="1"
                    android:text="6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/payeco_digit_7_hx"
                    style="@style/payeco_keyboardDigitButton_hx"
                    android:layout_weight="1"
                    android:text="7"/>

                <Button
                    android:id="@+id/payeco_digit_8_hx"
                    style="@style/payeco_keyboardDigitButton_hx"
                    android:layout_weight="1"
                    android:text="8"/>

                <Button
                    android:id="@+id/payeco_digit_9_hx"
                    style="@style/payeco_keyboardDigitButton_hx"
                    android:layout_weight="1"
                    android:text="9"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/payeco_digit_x_hx"
                    style="@style/payeco_keyboardDigitButton_hx"
                    android:layout_weight="1"
                    android:text="X"/>

                <Button
                    android:id="@+id/payeco_digit_0_hx"
                    style="@style/payeco_keyboardDigitButton_hx"
                    android:layout_weight="1"
                    android:text="0"/>

                <Button
                    android:id="@+id/keyboard_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/payeco_stand_digtselector_back"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>