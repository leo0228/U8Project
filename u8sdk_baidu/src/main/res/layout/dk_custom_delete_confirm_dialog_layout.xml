<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="140dp"
    android:background="@drawable/dk_dialog_round_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <TextView
            android:id="@+id/progress_message_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/dk_download_tips_delete"
            android:textColor="@color/bdp_color_color_ff333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/progress_message_body"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/dk_download_tips_delete"
            android:textColor="@color/bdp_color_color_ffcccccc"
            android:textSize="14sp" />
    </RelativeLayout>
    
     <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bdp_color_cccccc" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_button_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dk_cancel"
            android:textColor="@color/bdp_color_color_ffcfcfcf"
            android:textSize="15sp" />

        <View
            android:id="@+id/bd_tv_middle"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/bdp_color_color_ffc6c6c6"
            android:gravity="center" />

        <TextView
            android:id="@+id/dialog_button_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dk_confirm"
            android:textColor="@color/bdp_color_color_ffe5006a"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>