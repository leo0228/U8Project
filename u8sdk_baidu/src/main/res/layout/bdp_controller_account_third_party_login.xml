<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bdp_bg_white_round"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linAccountPass"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_other_login_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:paddingLeft="15dp"
            android:src="@drawable/bdp_icon_login_other_left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_login_type_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_login_type_one"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/bdp_image" />

                <TextView
                    android:id="@+id/tv_login_type_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/bdp_color_999999"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_login_type_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_login_type_two"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/bdp_image" />

                <TextView
                    android:id="@+id/tv_login_type_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/bdp_color_999999"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_login_type_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_login_type_three"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:contentDescription="@string/bdp_image" />

                <TextView
                    android:id="@+id/tv_login_type_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/bdp_color_999999"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_other_login_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:paddingRight="15dp"
            android:src="@drawable/bdp_icon_login_other_right" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    >
    <View
        android:id="@+id/view_line_across"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="34dp"
        android:background="@color/bdp_color_dddddd" />
    <LinearLayout
        android:id="@+id/ll_append_login"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/bdp_bg_f8f9fd_round"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_append_login_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/bdp_icon_login_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/bdp_account_login_by_phone"
                android:textColor="@color/bdp_color_333333"
                android:textSize="13sp" />
        </LinearLayout>


        <View
            android:id="@+id/view_line_vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bdp_color_dddddd" />

        <LinearLayout
            android:id="@+id/ll_append_login_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/bdp_icon_login_demo_game" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/bdp_account_guest_login"
                android:textColor="@color/bdp_color_333333"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


</RelativeLayout>
