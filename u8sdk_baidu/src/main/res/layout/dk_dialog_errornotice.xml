<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480dp"
    android:layout_height="300dp"
    android:background="@drawable/dk_dialog_round_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/bd_rl_noticetitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/dk_dialog_f5_round_top_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
        <View
            android:layout_toLeftOf="@+id/bd_notice_toptitle"
            android:layout_centerInParent="true"
            android:layout_width="3dp"
            android:layout_height="16dp"
            android:layout_marginRight="5dp"
            android:background="@color/bdp_color_4A90E2"/>

        <TextView
            android:id="@+id/bd_notice_toptitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/dk_user_notice_text"
            android:textColor="#4A4A4A"
            android:textSize="18sp" />

        <!--<ImageView-->
            <!--android:id="@+id/bd_iv_notice_close"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_margin="20dp"-->
            <!--android:background="@drawable/dk_btn_selector_notice_close" />-->

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:background="#eeeeee" />-->
    </RelativeLayout>

    <ListView
        android:id="@+id/bd_lv_notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bd_rl_noticetitle"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:paddingBottom="25dp"
        android:divider="@drawable/dk_notice_line"
        android:listSelector="@color/dk_transparent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@drawable/dk_dialog_f5_round_bottom_bg"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/bd_tv_nexttitle"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/dk_error_next"
            android:textColor="@color/dk_color_ffffff"
            android:layout_marginRight="15dp"
            android:background="@drawable/dk_blue_round_bg" />
        <TextView
            android:id="@+id/bd_tv_close"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/dk_dialog_string_close"
            android:textColor="@color/dk_color_ff9b9b9b"
            android:background="@drawable/dk_error_round_bg"

            />
    </LinearLayout>
