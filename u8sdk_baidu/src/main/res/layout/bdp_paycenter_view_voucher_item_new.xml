<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_voucher_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bdp_bg_round_voucher_selected"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/bdp_rr_voucher_info"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:background="@drawable/bdp_bg_round_voucher_half"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bdp_pay_voucher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:includeFontPadding="false"
                android:text="10"
                android:textColor="#ff9249"
                android:textSize="@dimen/bdp_paycenter_text_size_36_sp" />

            <TextView
                android:id="@+id/bdp_pay_voucher_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bdp_pay_voucher_name"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@+id/bdp_pay_voucher_name"
                android:includeFontPadding="false"
                android:paddingRight="10dp"
                android:text="@string/bdp_paycenter_yuan"
                android:textColor="#ff9249"
                android:textSize="@dimen/bdp_paycenter_text_size_20_sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bdp_pay_voucher_diffConditionMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bdp_bg_voucher_diff_money"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/bdp_paycenter_soon_expire"
                android:textColor="@color/bdp_color_ffffff"
                android:textSize="@dimen/bdp_paycenter_text_size_12_sp" />
        </RelativeLayout>

        <View
            android:id="@+id/bdp_view_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/bdp_rr_voucher_info"
            android:background="#e6e6e6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/bdp_view_line" >

            <TextView
                android:id="@+id/bdp_pay_voucher_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="test"
                android:textColor="@color/bdp_color_000000"
                android:textSize="@dimen/bdp_paycenter_text_size_14_sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bdp_pay_voucher_expire_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bdp_bg_voucher_end_time_round"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/bdp_paycenter_soon_expire"
                android:textColor="#ff5050"
                android:textSize="@dimen/bdp_paycenter_text_size_10_sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/bdp_pay_voucher_expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bdp_pay_voucher_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/bdp_color_999999"
                android:textSize="@dimen/bdp_paycenter_text_size_12_sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/bdp_pay_voucher_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bdp_pay_voucher_expire"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/bdp_color_999999"
                android:textSize="@dimen/bdp_paycenter_text_size_12_sp"
                android:visibility="gone" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/bdp_voucher_check"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bdp_paycenter_checkbox"
            android:button="@null"
            android:clickable="false"
            android:focusable="false" />
    </RelativeLayout>

</RelativeLayout>