<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bdp_paycenter_layout_dialog_close_parent"
    android:layout_width="278dp"
    android:layout_height="165dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/bdp_paycenter_tv_dialog_is_give_up_pay"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:gravity="center"
        android:text="@string/bdp_paycenter_tip_give_up_pay"
        android:textColor="#333333"
        android:textSize="17sp" />
	<View 
	    android:layout_height="1px"
	    android:layout_width="match_parent"
	    android:background="#cccccc"
	    />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bdp_paycenter_btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/bdp_paycenter_alipay_cancel"
            android:textColor="#cfcfcf"
            android:background="@drawable/bdp_color_white__without_corners_selector"
            android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />
		<View 
		    android:layout_height="match_parent"
		    android:layout_width="1px"
		    android:background="#c6c6c6"
		    android:layout_marginTop="15dp"
		    android:layout_marginBottom="15dp"
		    />
        <TextView
            android:id="@+id/bdp_paycenter_btn_dialog_ensure"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bdp_color_white__without_corners_selector"
            android:text="@string/bdp_paycenter_alipay_ensure"
            android:textColor="#e5006a"
            android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />
    </LinearLayout>

</LinearLayout>