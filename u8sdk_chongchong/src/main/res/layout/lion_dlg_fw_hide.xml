<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lion_common_dialog_bg"
    android:orientation="vertical"
    android:padding="@dimen/lion_dlg_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="50dp"
        android:text="@string/lion_dlg_fw_hide_title"
        android:textColor="@color/lion_common_basic_red"
        android:textSize="18dp" />

    <com.lion.ccpay.view.RatioColorFilterImageView
        android:layout_width="262.5dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lion_icon_fw_show_hide" />

    <TextView
        android:id="@+id/lion_dlg_fw_hide_notice_no_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="6dp"
        android:drawableLeft="@drawable/lion_common_check_selector"
        android:drawablePadding="6dip"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:singleLine="true"
        android:text="不再提示"
        android:textColor="@color/lion_color_333333"
        android:textSize="13dp" />

    <include layout="@layout/lion_dlg_two_btn" />

</LinearLayout>
