<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lion_fragment_gift"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lion_common_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lion_fragment_game_detail_gift_view_my_gift_bag"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/lion_color_F5F0F0"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lion_text_view_my_gift_bag"
            android:textColor="@color/lion_common_basic_red"
            android:textSize="14dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lion_fragment_game_detail_gift_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

</LinearLayout>