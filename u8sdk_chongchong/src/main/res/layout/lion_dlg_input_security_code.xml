<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/lion_common_white_frame_nor"
              android:gravity="center"
              android:orientation="horizontal">

    <EditText
        android:id="@+id/lion_dlg_input_security"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/lion_dlg_input"
        android:layout_weight="1.0"
        android:background="@null"
        android:drawableLeft="@drawable/lion_icon_code_gray"
        android:drawablePadding="7.5dip"
        android:hint="@string/lion_hint_security_code"
        android:inputType="phone"
        android:maxLength="6"
        android:paddingLeft="10.0dip"
        android:singleLine="true"
        android:textColor="@color/lion_common_black"
        android:textColorHint="@color/lion_common_text_gray"
        android:textSize="14.0dp"/>

    <com.lion.ccpay.view.SecurityCode
        android:id="@+id/lion_dlg_get_security"
        android:layout_width="wrap_content"
        android:layout_height="30.0dip"
        android:layout_marginRight="2.5dip"
        android:gravity="center"
        android:paddingLeft="7.5dip"
        android:paddingRight="7.5dip"
        android:text="@string/lion_dlg_get_security_code"
        android:textColor="@color/lion_common_text_security_code"
        android:textSize="12.0dp"/>

</LinearLayout>