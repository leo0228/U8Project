<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lion_activity_user_local_video_item_content"
        android:layout_width="match_parent"
        android:layout_height="85.0dip"
        android:minHeight="85.0dip"
        android:padding="10.0dip">

        <com.lion.ccpay.view.LocalVideoIcon
            android:id="@+id/lion_activity_user_local_video_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/lion_common_black"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10.0dip">

                <TextView
                    android:id="@+id/lion_activity_user_local_video_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/lion_common_black"
                    android:textSize="15.0dp"/>

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"/>

                <TextView
                    android:id="@+id/lion_activity_user_local_video_item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/lion_common_text_gray"
                    android:textSize="13.0dp"/>

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"/>

                <ImageView
                    android:id="@+id/lion_activity_user_local_video_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lion_common_arrow_circle_selector"/>
            </LinearLayout>

            <TextView
                android:id="@+id/lion_activity_user_local_video_item_post"
                style="@style/lion_text_red_button"
                android:layout_width="65.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:text="@string/lion_text_send"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lion_activity_user_local_video_item_menu"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:background="@drawable/lion_common_down_item_selector"
        android:gravity="center">

        <TextView
            android:id="@+id/lion_activity_user_local_video_item_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lion_icon_hit"
            android:drawablePadding="15.0dip"
            android:gravity="center"
            android:text="@string/lion_text_delete"
            android:textColor="@color/lion_common_white"
            android:textSize="15.0dp"/>
    </LinearLayout>

</LinearLayout>