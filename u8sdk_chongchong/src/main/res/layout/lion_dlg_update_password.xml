<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/lion_dlg_margin">

    <TextView
        style="@style/lion_style_dlg_title"
        android:text="@string/lion_dlg_edit_pwd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lion_common_dialog_content_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lion_dlg_input_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lion_dlg_margin"
            android:drawablePadding="7.5dip"
            android:textColor="@color/lion_common_text_gray"
            android:textSize="14.0dp"
            tools:text="一键注册的账号初始密码为123456，未修改的用户请及时修改。" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lion_common_white_frame_nor">

            <EditText
                android:id="@+id/lion_dlg_input_old_pwd"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="@string/lion_dlg_input_old_pwd"
                android:inputType="textPassword"
                android:paddingLeft="10.0dip"
                android:singleLine="true"
                android:textColor="@color/lion_common_black"
                android:textColorHint="@color/lion_common_text_gray"
                android:textSize="14.0dp" />

            <ImageView
                android:id="@+id/lion_dlg_input_scan_old_pwd"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:scaleType="center"
                android:src="@drawable/lion_common_scan_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lion_dlg_margin"
            android:background="@drawable/lion_common_white_frame_nor">

            <EditText
                android:id="@+id/lion_dlg_input_new_pwd"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="@string/lion_dlg_input_new_pwd"
                android:inputType="textPassword"
                android:paddingLeft="10.0dip"
                android:singleLine="true"
                android:textColor="@color/lion_common_black"
                android:textColorHint="@color/lion_common_text_gray"
                android:textSize="14.0dp" />

            <ImageView
                android:id="@+id/lion_dlg_input_scan_new_pwd"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:scaleType="center"
                android:src="@drawable/lion_common_scan_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lion_dlg_input_nickname_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lion_dlg_margin"
            android:background="@drawable/lion_common_white_frame_nor">

            <EditText
                android:id="@+id/lion_dlg_input_second_pwd"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="@string/lion_dlg_input_second_pwd"
                android:inputType="textPassword"
                android:paddingLeft="10.0dip"
                android:singleLine="true"
                android:textColor="@color/lion_common_black"
                android:textColorHint="@color/lion_common_text_gray"
                android:textSize="14.0dp" />

            <ImageView
                android:id="@+id/lion_dlg_input_scan_second"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:scaleType="center"
                android:src="@drawable/lion_common_scan_selector" />
        </LinearLayout>

        <include layout="@layout/lion_dlg_two_btn" />
    </LinearLayout>

</LinearLayout>