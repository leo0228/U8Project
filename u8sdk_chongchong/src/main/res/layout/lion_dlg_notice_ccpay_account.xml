<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/lion_dlg_margin"
    android:orientation="vertical">

    <TextView
        style="@style/lion_style_dlg_title"
        android:text="@string/lion_dlg_notice" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lion_common_dialog_content_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lion_dlg_notice_ccpay_account_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lion_common_black"
            android:textSize="14.0dp"
            tools:text="@string/lion_dlg_screen_shot_save_account_info" />

        <TextView
            android:id="@+id/lion_dlg_notice_ccpay_account_sure"
            style="@style/lion_style_dlg_btn_right"
            android:layout_width="match_parent"
            android:layout_marginTop="7.5dip"
            android:text="@string/lion_dlg_sure" />
    </LinearLayout>

</LinearLayout>