<?xml version="1.0" encoding="utf-8"?>
<com.lion.ccpay.widget.LoadingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lion_loading_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lion_loading_layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lion_icon_gray"
        android:gravity="center" >

        <com.lion.ccpay.view.LoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10.0dip"
            android:drawableTop="@drawable/lion_common_page_loading"
            android:gravity="center"
            android:text="@string/lion_load_loading"
            android:textColor="@color/lion_common_text_gray"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lion_loading_layout_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lion_icon_gray"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/lion_loading_layout_nodata_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10.0dip"
            android:drawableTop="@drawable/lion_page_nothing"
            android:gravity="center"
            android:padding="15.0dip"
            android:text="@string/lion_load_no_data"
            android:textColor="@color/lion_common_text_gray"
            android:textSize="15.0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lion_loading_layout_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lion_icon_gray"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10.0dip"
            android:drawableTop="@drawable/lion_page_nothing"
            android:text="@string/lion_load_fail"
            android:textColor="@color/lion_common_text_gray"
            android:textSize="15.0dp" />
    </LinearLayout>

</com.lion.ccpay.widget.LoadingLayout>