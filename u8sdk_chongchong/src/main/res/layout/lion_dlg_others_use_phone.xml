<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/lion_dlg_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/lion_style_dlg_title"
            android:text="@string/lion_dlg_warm_prompt" />

        <ImageView
            android:id="@+id/lion_dlg_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:paddingRight="7.5dp"
            android:src="@drawable/lion_icon_off" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lion_common_dialog_content_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lion_dlg_others_use_phone_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="7.5dip"
            android:textColor="@color/lion_common_text_gray"
            android:textSize="14.0dp"
            tools:text="@string/lion_dlg_others_use_phone_notice" />

        <LinearLayout
            android:id="@+id/lion_dlg_login_pwd_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/lion_dlg_find_pwd"
                style="@style/lion_style_dlg_single"
                android:text="@string/lion_dlg_find_pwd" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0dip"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/lion_dlg_switch_account"
                style="@style/lion_style_dlg_single"
                android:text="@string/lion_dlg_switch_account_bind_phone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>