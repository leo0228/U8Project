<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	>
    
    <ImageView 
        android:id="@+id/huo_sdk_iv_float"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/huo_sdk_float_view_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:maxHeight="58dp"
        android:maxWidth="58dp"
        android:adjustViewBounds="true"
        android:src="@drawable/huo_sdk_fload"/>
    
    <LinearLayout 
        android:id="@+id/huo_sdk_item_lay"
        android:layout_width="wrap_content"
    	android:layout_height="@dimen/huo_sdk_float_view_height"
    	android:layout_alignLeft="@+id/huo_sdk_iv_float"
    	android:visibility="visible"
    	android:orientation="horizontal">
        
        <ImageView 
	        android:id="@+id/huo_sdk_float_item_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxHeight="@dimen/huo_sdk_float_view_height"
	        android:maxWidth="@dimen/huo_sdk_float_view_height"
	        android:adjustViewBounds="true"
	        android:src="@drawable/huo_sdk_floating_view_back_left"/>
        
        <LinearLayout 
            android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/huo_sdk_float_body_bg"
	    	android:maxHeight="@dimen/huo_sdk_float_view_height"
	        android:maxWidth="@dimen/huo_sdk_float_view_height"
	        android:adjustViewBounds="true"
	        android:gravity="center_vertical"
	    	android:orientation="horizontal">
            
            <LinearLayout 
                android:id="@+id/huo_sdk_menu_item"
                android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="#00000000"
		    	android:orientation="horizontal">
		    	
                <LinearLayout 
                    android:id="@+id/huo_sdk_float_item_user_lay"
                    android:layout_width="wrap_content"
			    	android:layout_height="fill_parent"
			    	android:background="#00000000"
			    	android:gravity="center_vertical"
			    	android:orientation="vertical">
			    	
                    <ImageView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:maxHeight="20dp"
				        android:maxWidth="20dp"
				        android:adjustViewBounds="true"
				        android:src="@drawable/huo_sdk_float_user_bg"/>
                    
                    <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="@string/huo_sdk_btn_user"
			            android:layout_gravity="center_horizontal"
			            android:textColor="#ffffff"
			            android:textSize="@dimen/huo_sdk_float_min_font"/>
                    
                </LinearLayout>
	            
	        
                <LinearLayout 
                    android:id="@+id/huo_sdk_float_item_gift_lay"
                    android:layout_width="wrap_content"
			    	android:layout_height="fill_parent"
			    	android:layout_marginLeft="18dp"
			    	android:background="#00000000"
			    	android:gravity="center_vertical"
			    	android:orientation="vertical"
					android:visibility="gone"
					>
                    
                    <ImageView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:maxHeight="20dp"
				        android:maxWidth="20dp"
				        android:adjustViewBounds="true"
				        android:src="@drawable/huo_sdk_float_gift_bg"/>
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="@string/huo_sdk_btn_gift"
			            android:layout_gravity="center_horizontal"
			            android:textColor="#ffffff"
			            android:textSize="@dimen/huo_sdk_float_min_font"/>
			        
		        </LinearLayout>
		       
                <LinearLayout 
                    android:id="@+id/huo_sdk_float_item_server_lay"
                    android:layout_width="wrap_content"
			    	android:layout_height="fill_parent"
			    	android:layout_marginLeft="18dp"
			    	android:background="#00000000"
			    	android:gravity="center_vertical"
			    	android:orientation="vertical"
					android:visibility="gone">
			        
                    <ImageView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:maxHeight="20dp"
				        android:maxWidth="20dp"
				        android:adjustViewBounds="true"
				        android:src="@drawable/huo_sdk_float_server_bg"/>
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="@string/huo_sdk_btn_server"
			            android:layout_gravity="center_horizontal"
			            android:textColor="#ffffff"
			            android:textSize="@dimen/huo_sdk_float_min_font"/>
			        
		        </LinearLayout>
		      
		      
                <LinearLayout 
                    android:id="@+id/huo_sdk_float_item_bbs_lay"
                    android:layout_width="wrap_content"
			    	android:layout_height="fill_parent"
			    	android:layout_marginLeft="18dp"
			    	android:background="#00000000"
			    	android:visibility="gone"
			    	android:gravity="center_vertical"
			    	android:orientation="vertical"
					>
			        
                    <ImageView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:maxHeight="20dp"
				        android:maxWidth="20dp"
				        android:adjustViewBounds="true"
				        android:src="@drawable/huo_sdk_float_bbs_bg"/>
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_horizontal"
			            android:text="@string/huo_sdk_btn_bbs"
			            android:textColor="#ffffff"
			            android:textSize="@dimen/huo_sdk_float_min_font"/>
			        
		        </LinearLayout>
				<LinearLayout
					android:id="@+id/huo_sdk_float_item_identify_lay"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:layout_marginLeft="18dp"
					android:background="#00000000"
					android:visibility="visible"
					android:gravity="center"
					android:orientation="vertical"
					>

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:maxHeight="18dp"
						android:maxWidth="18dp"
						android:adjustViewBounds="true"
						android:src="@drawable/huo_sdk_ic_renzheng"/>
					<TextView
						android:layout_marginTop="2dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:text="@string/huo_sdk_btn_identify"
						android:textColor="#ffffff"
						android:textSize="@dimen/huo_sdk_float_min_font"/>

				</LinearLayout>
		        
		        <!--<LinearLayout 
                    android:id="@+id/float_item_more_lay"
                    android:layout_width="wrap_content"
			    	android:layout_height="fill_parent"
			    	android:layout_marginLeft="18dp"
			    	android:background="#00000000"
			    	android:gravity="center_vertical"
			    	android:orientation="vertical">
			        
                    <ImageView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:maxHeight="20dp"
				        android:maxWidth="20dp"
				        android:adjustViewBounds="true"
				        android:src="@drawable/float_more_bg"/>
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_horizontal"
			            android:text="@string/btn_more"
			            android:gravity="center_horizontal"
			            android:textColor="#ffffff"
			            android:textSize="@dimen/float_min_font"/>
			        
		        </LinearLayout>  -->

	        </LinearLayout>
            
        </LinearLayout>
        <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxHeight="@dimen/huo_sdk_float_view_height"
	        android:maxWidth="@dimen/huo_sdk_float_view_height"
	        android:adjustViewBounds="true"
	        android:src="@drawable/huo_sdk_float_foot_bg"/>
    </LinearLayout>

</RelativeLayout>
