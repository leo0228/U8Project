<?xml version="1.0" encoding="utf-8"?>
<com.vivo.mobilead.unified.base.view.VivoNativeAdContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vn_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/prompt_agree"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_image"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="原生广告小图展示"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_image"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ad_mark_logo"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/tv_ad_mark_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:text="广告"/>
        </LinearLayout>
    </RelativeLayout>
</com.vivo.mobilead.unified.base.view.VivoNativeAdContainer>
