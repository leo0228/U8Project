<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vip_perfect_info"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/m4399_ope_vip_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/vip_pefect_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/m4399_ope_perfect_nickname_text"
        android:textSize="@dimen/m4399_ope_vip_tv_size_two" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:scaleType="fitEnd"
        android:src="@drawable/m4399_ope_vip_ic_gift" />

    <ImageView
        android:layout_width="9dp"
        android:layout_height="22dp"
        android:src="@drawable/m4399_ope_vip_arrow_right" />
</LinearLayout>
