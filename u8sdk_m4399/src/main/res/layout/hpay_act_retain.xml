<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:background="@drawable/m4399_ope_common_alert_dialog_bg"
    android:orientation="vertical"
    android:paddingTop="25dp">

    <TextView
        android:id="@+id/hpay_tv_rt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="10dip"
        android:textColor="@color/hpay_title_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/hpay_tv_rt_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:lineSpacingExtra="6dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColor="#dd000000"
        android:textSize="16sp" />


    <View style="@style/m4399PerfectLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hpay_btn_rt_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/m4399_ope_vip_button_bg_left"
            android:gravity="center"
            android:textColor="#dd000000"
            android:textSize="16sp" />

        <View
            android:id="@+id/center_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/m4399_ope_perfect_line" />

        <Button
            android:id="@+id/hpay_btn_rt_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/m4399_ope_vip_button_bg_right"
            android:gravity="center"
            android:orientation="horizontal"
            android:textColor="@color/m4399_rec_color_yellow"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>

