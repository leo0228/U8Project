<?xml version="1.0" encoding="utf-8"?><!--金额、商品、账户名-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/m4399_rec_money_product" />

    <include layout="@layout/m4399_rec_account_info" />

    <include layout="@layout/m4399_rec_sec_coupon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            style="@style/m4399RecLabelTv"
            android:text="@string/m4399_rec_recharge_way"

            />

        <LinearLayout
            android:id="@+id/choose_channel_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_channel_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/m4399_rec_alipay_mini"
                android:visibility="gone" />

            <TextView
                android:id="@+id/main_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/m4399_rec_recharge_way_choose"
                android:textColor="@color/m4399_rec_color_blue_33bdfc"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:duplicateParentState="true"
                android:scaleType="centerInside"
                android:src="@drawable/m4399_rec_coupon_goto_tips" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>