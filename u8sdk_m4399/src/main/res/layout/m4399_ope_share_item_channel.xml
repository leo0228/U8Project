<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/m4399_ope_share_item_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/m4399_ope_share_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/m4399_ope_share_item_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/m4399_ope_share_item_tv_label"
        android:layout_width="20dp"
        android:layout_height="11dp"
        android:layout_alignRight="@id/m4399_ope_share_item_iv"
        android:background="@drawable/m4399_ope_share_label_bg"
        android:gravity="center"
        android:text="@string/m4399_ope_share_channel_label"
        android:textColor="@color/m4399_ope_usercenter_white"
        android:textSize="7sp" />
</RelativeLayout>
