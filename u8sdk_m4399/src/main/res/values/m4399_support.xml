    <!-- styles -->
    <style name="m4399" />
    <!-- H1: 少数标题-->
    <style name="m4399.Text.H1" parent="m4399">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- H1: 重要标题、tab-->
    <style name="m4399.Text.H2" parent="m4399">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- H3: 用于一般标题：列表、对话框标题-->
    <style name="m4399.Text.H3" parent="m4399">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/m4399_font_16</item>
    </style>

    <!-- Prompt: 用于一般性提示 -->
    <style name="m4399.Text.Prompt" parent="m4399">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/m4399_spacing_14</item>
    </style>

    <style name="m4399.Anim.Slide" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/m4399_ope_support_slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/m4399_ope_support_slide_out_right</item>
    </style>

    <style name="m4399.Theme.Dialog.Base" parent="android:Theme.Holo.Dialog">
        <item name="android:background">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/m4399_ope_support_dialog_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="m4399.Dialog.Title" parent="m4399.Text.H3">
        <item name="android:id">@id/m4399_id_tv_dialog_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/m4399_dialog_spacing_h</item>
        <item name="android:layout_marginRight">@dimen/m4399_dialog_spacing_h</item>
        <item name="android:layout_marginTop">@dimen/m4399_dialog_spacing_v</item>
    </style>

    <style name="m4399.Dialog.Content" parent="m4399">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="m4399.Nav.Icon" parent="m4399">
        <item name="android:layout_width">@dimen/m4399_nav_icon_width</item>
        <item name="android:layout_height">@dimen/m4399_nav_icon_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/m4399_ope_support_nav_icon_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:clickable">true</item>
    </style>
